<h1><%= @product.name %></h1>
<h3>$<%= @product.cost %></h3>
<h3>Country of origin: <%= @product.country_of_origin %></h3>

<h3>Product Review</h3>
<% if @product.reviews.any? %>
<h4><%= @product.reviews.length %> Reviews</h4>
<% @product.reviews.each do |review| %>
<ul>
  <li>
    <%= review.author %><br>
    <%= review.rating %> stars<br>
    <%= review.content_body %>
  </li>
</ul>
<% end %>
<% else %>
<p>This product has no reviews.</p>
<% end %>

<p><%= link_to "Add review", new_product_review_path(@product) %></p>
<p><%= link_to "Edit", edit_product_path(@product) %></p>
<p><%= link_to "Delete product", product_path(@product),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %></p>

<%= link_to "Go Back to all products", products_path %>

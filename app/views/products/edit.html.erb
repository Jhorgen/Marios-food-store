<h1>Product</h1>

<% if @product.errors.any? %>
<h3>Please fix these errors:</h3>
<ul>
  <% @product.errors.full_messages.each do |message| %>
    <li><%= message %> </li>
    <% end %>
</ul>
<% end %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %>
  <%= f.submit %>
<% end %>
